style.
  :root {
    --bg: #f9f9f9;
    --table-color: #ecf0f1;
    --card-red: #e74c3c;
    --card-black: #333;
  }
  html, body {
    padding: 0;
    margin: 0;
    width: 100%;
    height: 100%;
    background: var(--bg);
  }
  #reset {
  }
  .btn4 {
    font-family: 'Source Sans Pro', sans-serif;
    font-size: 2em;
    background-color: #cbccde;
    border: 3px solid #cbccde;
    color: white;
    text-transform: uppercase;
    height: 50px;
    width: 150px;
    opacity: 0.5;
    text-shadow: 4px 4px 3px rgba(77, 77, 77, 0.5);
    box-shadow: 7px 7px rgba(77, 77, 77, 0.1);
    cursor: pointer;
    transition: transform 0.4s, box-shadow 0.4s;
    z-index: 1000;
    border-radius: 10px;
  }

  .btn4:hover {
    box-shadow: 14px 14px rgba(77, 77, 77, 0.5);
    opacity: 0.8;
  }

  .btn4:active {
    transform: translate3d(7px, 7px, 0px);
    box-shadow: 7px 7px rgba(77, 77, 77, 0.5);
  }

  #frame {
    display: flex;
    width: 100%;
    height: 100%;
    align-items: center;
    justify-content: center;
    perspective: 800px;
    transform-style: preserve-3d;
    overflow: hidden;
    flex-direction: column;
  }
  #frame> div.header {
      display:flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
  }
  #frame> div.header> * {
      margin-bottom:10px;
  }
  #frame> div.header> p {
    font-family: 'Source Sans Pro', sans-serif;
    font-size: 0.95em;
    width: 100%;
    letter-spacing: 4px;
    text-transform: uppercase;
    text-align: center;
    user-select: none;
    text-shadow: 0 0 2px rgba(100, 100, 100, 0.5);
    z-index: 9999;
  }
  #table {
    position: relative;
    width: 90%;
    height: 90%;
    perspective: 1200px;
    //- transform: rotateY(-15deg) rotateX(40deg);
    background: var(--table-color);
    box-shadow: 0 0 100px 100px var(--table-color);
  }
  #table .card {
    position: absolute;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100px;
    height: 150px;
    border-radius: 10px;
    background: #f9f9f9;
    box-shadow: 1px 1px 5px 1px rgba(150, 150, 150, 0.15);
  }
  #table .card__symbol {
    font-size: 60px;
    color: var(--card-black);
    user-select: none;
  }
  #table .card__symbol--red {
    color: var(--card-red);
  }
  #table .card--sample {
    top: 40%;
    left: 45%;
    transform: rotate(45deg);
    background-size:200%;
    background-image: url(https://previews.123rf.com/images/liliwhite/liliwhite1501/liliwhite150100021/35527583-luxury-silver-poker-background-with-card-symbols-ornament.jpg)
  }
  
  .card__number--top-left{
      position: absolute;
      font-size: 30px;
      top:5px;
      left:10px;
  }

 .card__number--bottom-right{
      position: absolute;
      font-size: 30px;
      bottom:5px;
      right:10px;
      transform: rotate(180deg)
  }